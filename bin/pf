#!/usr/bin/env php
<?php

define("DS", DIRECTORY_SEPARATOR);
define("WORKING_DIR", getcwd());

define("LIB_PATH", dirname(__FILE__).DS.'..'.DS.'lib'.DS);

# Fix the arguments and count
array_shift($argv);

# Load everything after fixing arguments
require_once LIB_PATH.'version.php';
require_once LIB_PATH.'loader.php';

if (!CommandLine::run($argv)) {
    echo <<<EOF
Usage: pf setup
       pf update
       pf list [clouds|apps <cloud_id>|sshkeys]
       pf details [<appname>|<app_id>]
       pf clone [<appname>|<app_id>] [directory]
       pf pull
       pf push
       pf delete [app|sshkey] [<appname>|<app_id>|<ssh_key_id>]
       pf whoami
       pf logout

EOF;
}
?>
